{
  "name": "eslint-plugin-sppt",
  "version": "1.0.2",
  "description": "ESLint plugin for TypeScript React components",
  "engines": {
    "node": ">=16.10.0"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "husky install",
    "clean": "rimraf dist",
    "prebuild": "yarn run clean",
    "build": "tsc",
    "lint": "run-s lint:ts lint:eslint lint:prettier",
    "lint:ts": "tsc --noEmit",
    "lint:eslint": "eslint '**/*.{js,ts}'",
    "lint:prettier": "prettier '**/*.{js,ts,json,yaml,md}'",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:eslint": "yarn run lint:eslint -- --fix",
    "fix:prettier": "yarn run lint:prettier -- --write",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prerelease": "yarn run build",
    "release": "npx changeset publish",
    "add-rule": "ts-node scripts/add-rule",
    "update": "ts-node scripts/update"
  },
  "peerDependencies": {
    "eslint": ">=8.41.0"
  },
  "dependencies": {
    "@typescript-eslint/utils": "^5.59.8"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@types/eslint": "^7.2.8",
    "@types/jest": "^26.0.22",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hsuehic/eslint-plugin-sppt.git"
  },
  "keywords": [
    "typescript",
    "template",
    "eslint",
    "eslintplugin",
    "eslint-plugin"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hsuehic/eslint-plugin-sppt/issues"
  },
  "homepage": "https://github.com/hsuehic/eslint-plugin-sppt#readme"
}
